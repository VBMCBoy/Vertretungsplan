<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory
    android:title="@string/Kategorie_Main">
    <EditTextPreference
      android:key="KL"
      android:persistent="true"
      android:singleLine="true"
      android:summary="Für Lehrer reicht der Nachname."
      android:title="@string/einst_klasse"/>
    <EditTextPreference
      android:inputType="textNoSuggestions"
      android:key="BN"
      android:persistent="true"
      android:singleLine="true"
      android:title="@string/name"/>
    <EditTextPreference
      android:inputType="textPassword"
      android:key="PW"
      android:persistent="true"
      android:title="@string/passwort"/>
  </PreferenceCategory>
  <PreferenceCategory
    android:title="@string/Kategorie_Notification">
    <SwitchPreference
      android:key="Benachrichtigungan"
      android:persistent="true"
      android:summaryOff="Sie werden keine Benachrichtigungen erhalten"
      android:summaryOn="Sie werden etwa stündlich von Änderungen des morgigen Vertretungsplanes benachrichtigt, wenn für Sie etwas Wichtiges drinsteht."
      android:title="Benachrichtigungen">
    </SwitchPreference>

  </PreferenceCategory>
  <PreferenceCategory
    android:title="@string/datenschutz">
    <SwitchPreference
      android:defaultValue="true"
      android:key="Datenschutz"
      android:persistent="true"
      android:summaryOff="Schade! Es werden keine Crash-Reports und Nutzungsinformationen an den Entwickler gesendet."
      android:summaryOn="Crashes und Nutzungsinformationen werden an den Entwickler gesendet. Dankeschön!"
      android:title="Anonyme Datensammlung aktivieren">
    </SwitchPreference>

  </PreferenceCategory>

</PreferenceScreen>