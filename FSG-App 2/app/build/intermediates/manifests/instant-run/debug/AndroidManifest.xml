<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.KayKaprolat.Praktikum.Vertretungsplan2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_SYNC_STATS" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.KayKaprolat.Praktikum.Vertretungsplan2.ViewerActivity"
            android:label="Vertretungsplan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.KayKaprolat.Praktikum.Vertretungsplan2.SettingsActivity"
            android:label="Vertretungsplaneinstellungen"
            android:parentActivityName="com.KayKaprolat.Praktikum.Vertretungsplan2.ViewerActivity" />
        <activity
            android:name="com.KayKaprolat.Praktikum.Vertretungsplan2.LicenseActivity"
            android:parentActivityName="com.KayKaprolat.Praktikum.Vertretungsplan2.ViewerActivity" />
        <activity
            android:name="com.KayKaprolat.Praktikum.Vertretungsplan2.AboutActivity"
            android:parentActivityName="com.KayKaprolat.Praktikum.Vertretungsplan2.ViewerActivity" />

        <service
            android:name="com.KayKaprolat.Praktikum.Vertretungsplan2.AuthenticatorService"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <provider
            android:name="com.KayKaprolat.Praktikum.Vertretungsplan2.StubProvider"
            android:authorities="com.KayKaprolat.Praktikum.Vertretungsplan2.provider"
            android:exported="false"
            android:syncable="true" />

        <service
            android:name="com.KayKaprolat.Praktikum.Vertretungsplan2.SyncService"
            android:exported="false"
            android:process=":sync" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.KayKaprolat.Praktikum.Vertretungsplan2.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>